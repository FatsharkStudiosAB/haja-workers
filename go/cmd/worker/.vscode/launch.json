{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Main Package",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "args": []
        },
        {
            "name": "Debug with Air",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}",
            "buildFlags": "-tags=air",
            "env": {
                "AIR_ENABLED": "true"
            },
            "args": [],
            "showLog": true
        },
        {
            "name": "Attach to Air",
            "type": "go",
            "mode": "remote",
            "request": "attach",
            "host": "127.0.0.1",
            "port": 2345
        }
    ],
    "compounds": []
} 